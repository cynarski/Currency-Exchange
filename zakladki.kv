<MyTabbedPanel>:
    do_default_tab: False
    TabbedPanelItem1:
        text: 'Exchange'
    TabbedPanelItem2:
        text: 'Courses'
    TabbedPanelItem3:
        text: 'Charts'

<TabbedPanelItem1>:

    FloatLayout:
        orientation: 'horizontal'
        Image:
            source: '15473394.jpg'
            size_hint: 1, 1

        Spinner:
            id: spinner
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.2, 'y': 0.8}
            values: ['EUR', 'USD', 'PLN', 'CHF', 'GBP', 'SWE', 'JPN', 'CNY', 'CND']
            on_text: root.update_image_left(self.text)
            text: "From"

        Image:
            id: image
            size_hint: None,None
            pos_hint: {'center_x': 0.3, 'y': 0.81}
            size: '48dp', '48dp'

        Spinner:
            id: spinner
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.8, 'y': 0.8}
            values: ['EUR', 'USD', 'PLN', 'CHF', 'GBP', 'SWE', 'JPN', 'CNY', 'CND']
            on_text: root.update_image_right(self.text)
            text: "To"

        Image:
            id: image2
            size_hint: None,None
            pos_hint: {'center_x': 0.7, 'y': 0.81}
            size: '48dp', '48dp'

        TextInput:
            id: input
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.2, 'y': 0.69}
            hint_text: 'Wpisz tekst tutaj'
            multiline: False
            font_size: 24
            input_filter: 'float'
            halign: 'center'

        Button:
            text: "Exchange_Button"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.calculate()

        Label:
            id: result_label
            canvas.before:
                Color:
                    rgb: (0,0,25)
                Rectangle:
                    size: self.width , self.height
                    pos: self.x, self.y
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.8, 'y': 0.69}
            text: "sieema"



<TabbedPanelItem2>:
    Label:
        text: 'To jest zawartość drugiej zakładki.'
