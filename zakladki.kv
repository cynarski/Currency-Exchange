<MyTabbedPanel>:
    do_default_tab: False
    TabbedPanelItem1:
        text: 'Exchange'
    TabbedPanelItem2:
        text: 'Courses'
    TabbedPanelItem3:
        text: 'Plots'

<TabbedPanelItem1>:

    FloatLayout:
        orientation: 'horizontal'

        Label:
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.5, 'y': 0.9}

        Spinner:
            id: spinner
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.2, 'y': 0.8}
            values: ['EUR', 'USD', 'PLN']
            on_text: root.update_image_left(self.text)
            text: "From"

        Image:
            id: image
            size_hint: None,None
            pos_hint: {'center_x': 0.3, 'y': 0.81}
            source: 'icons/default.png'
            size: '48dp', '48dp'

        Spinner:
            id: spinner
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.8, 'y': 0.8}
            values: ['EUR', 'USD', 'PLN']
            on_text: root.update_image_right(self.text)
            text: "To"

        Image:
            id: image2
            size_hint: None,None
            pos_hint: {'center_x': 0.7, 'y': 0.81}
            source: 'icons/default.png'
            size: '48dp', '48dp'

        TextInput:
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.2, 'y': 0.69}
            hint_text: 'Wpisz tekst tutaj'


<TabbedPanelItem2>:
    Label:
        text: 'To jest zawartość drugiej zakładki.'
