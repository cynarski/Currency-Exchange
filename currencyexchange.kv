<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)

        TextInput:
            id: number_input
            hint_text: "Enter a number"
            input_filter: "float"

        Button:
            text: "Calculate"
            on_release: root.calculate()

        Screen:
            name: "result_screen"
            Label:
                id: result_label
                text: ''
                font_size: '30sp'
                halign: 'center'